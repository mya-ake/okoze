{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["es5"],
    "types": ["node", "jest", "express", "faker"],
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./..",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./../src/**/*.ts",
    "./../**.json",
    "./**/*.ts"
  ],
  "exclude": ["node_modules"]
}

{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["es5"],
    "types": ["node", "jest", "express"],
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}

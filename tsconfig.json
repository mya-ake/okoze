{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["es5"],
    "types": ["node", "express", "lodash"],
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "./**/.json"],
  "exclude": ["node_modules"]
}
